extends layout

block content
	h1=title
	if errors
		each error, i in errors
			div.alert.alert-danger #{error.msg}
	form(method='post', action='/categories/add')
		.form-group
			label Name:
			input.form-control.col-md-6(name='name', type='text', placeholder='category name')
		input.btn.btn-default(name='submit', type='submit', value='Add category')